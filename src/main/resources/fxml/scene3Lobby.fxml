<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="900.0" prefWidth="1600.0" styleClass="bodyBgPreGame" stylesheets="@../css/styleBgPreGame.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.view.gui.controllers.Scene3LobbyController">
    <top>
        <ImageView fitHeight="174.0" fitWidth="519.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
                <Image url="@../images/Publisher material/Title 2000x618px.png" />
            </image>
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
        </ImageView>
    </top>
   <center>
      <VBox alignment="TOP_CENTER" fillWidth="false" prefWidth="1012.0" spacing="20.0" BorderPane.alignment="TOP_CENTER">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
         <children>
            <Label fx:id="labelLobby" styleClass="bodyBox" stylesheets="@../css/styleBox.css" text="The game will start automatically. Wait for the other players!" textAlignment="CENTER" textFill="#ffedaa" underline="true">
               <font>
                  <Font name="Times New Roman Bold Italic" size="24.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Label fx:id="labelErrorStartGame" textFill="RED" underline="true">
               <font>
                  <Font name="Algerian" size="20.0" />
               </font>
            </Label>
            <VBox alignment="TOP_CENTER" prefHeight="266.0" prefWidth="423.0" spacing="10.0" stylesheets="@../css/gamePhase.css">
               <children>
                   <Label styleClass="bodyBox" stylesheets="@../css/styleBox.css" text="PLAYER LIST:" textAlignment="CENTER" textFill="#ffedaa" underline="true">
                       <font>
                           <Font name="Times New Roman Bold Italic" size="18.0" />
                       </font>
                       <padding>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </padding>
                   </Label>
                  <ListView fx:id="playerList" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="423.0" styleClass="listView" stylesheets="@../css/styleBgPreGame.css" />
               </children></VBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox prefHeight="285.0" prefWidth="1600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="BOTTOM_LEFT" prefHeight="134.0" prefWidth="1415.0" spacing="10.0">
               <children>
                  <VBox alignment="BOTTOM_LEFT" prefHeight="266.0" prefWidth="155.0">
                     <children>
                         <Label styleClass="bodyBox" stylesheets="@../css/styleBox.css" text="Music volume" textAlignment="CENTER" textFill="#ffedaa" underline="true">
                             <font>
                                 <Font name="Times New Roman Bold Italic" size="14.0" />
                             </font>
                             <padding>
                                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                             </padding>
                         </Label>
                        <Slider fx:id="sliderVolume" />
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </HBox>
            <VBox>
               <children>
                  <MenuButton fx:id="recipientMenu" mnemonicParsing="false" text="Select player">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                     </items>
                     <font>
                        <Font name="Comic Sans MS" size="12.0" />
                     </font></MenuButton>
                  <ScrollPane hbarPolicy="NEVER" opacity="0.9" prefHeight="220.0" prefWidth="450.0" styleClass="listView" vbarPolicy="ALWAYS">
                     <content>
                        <ListView fx:id="messages" maxHeight="220.0" maxWidth="384.0" minHeight="220.0" minWidth="381.0" prefHeight="220.0" prefWidth="381.0" />
                     </content>
                  </ScrollPane>
                  <HBox maxWidth="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="383.0">
                     <children>
                        <TextField fx:id="messageText" prefHeight="26.0" prefWidth="333.0" />
                        <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="96.0" text="Send">
                           <font>
                              <Font name="Comic Sans MS" size="12.0" />
                           </font></Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" right="15.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
